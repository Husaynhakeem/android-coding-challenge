<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <ImageView
        android:id="@+id/popup_image_view"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:contentDescription="@string/popup_dialog_image_description"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Art by Artist" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/similar_image_view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/popup_dialog_similar_image_description"
            android:scaleType="centerCrop" />


        <ImageView
            android:id="@+id/similar_image_view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/popup_dialog_similar_image_description"
            android:scaleType="centerCrop" />


        <ImageView
            android:id="@+id/similar_image_view3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/popup_dialog_similar_image_description"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>